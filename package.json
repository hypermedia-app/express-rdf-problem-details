    "eslint-plugin-promise": "^6.0.1",
    "express": "^4.17.1",
    "husky": "^8.0.1",
    "http-errors": "^2.0.0",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "sinon": "^15.0.0",
    "sinon-chai": "^3.7.0",
    "standard": "^17.0.0",
    "supertest": "^6.1.6",
    "typescript": "^4.3.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hypermedia-app/express-rdf-problem-details.git"
  },
  "author": "Tomasz Pluskiewicz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hypermedia-app/express-rdf-problem-details/issues"
  },
  "homepage": "https://github.com/hypermedia-app/express-rdf-problem-details#readme",
  "mocha": {
    "watch-files": [
      "./**/*.ts"
    ],
    "require": [
      "mocha-setup.js"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
